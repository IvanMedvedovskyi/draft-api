generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Weapon {
  id                  String @id @default(cuid())
  name                String
  imageWeapon         String
  specialization      String
  imageSpecialization String
  rarity              String
}

model Character {
  id             String @id @default(cuid())
  name           String
  imageChar      String
  element        String
  imageElement   String
  specialization String
  imageSpec      String
  rarity         Int
}

model AdminPanelUser {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String
  securityCode  String?
  codeExpiresAt DateTime?
}
