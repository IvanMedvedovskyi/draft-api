generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Weapon {
  id                  String @id @default(cuid())
  name                String
  imageWeapon         String
  specialization      String
  imageSpecialization String
  rarity              Int
}

model Character {
  id             String         @id @default(cuid())
  name           String         @unique
  imageChar      String
  element        String
  imageElement   String
  specialization String
  imageSpec      String
  rarity         Int
  characterCost  CharacterCost?
}

model AdminPanelUser {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String
  securityCode  String?
  codeExpiresAt DateTime?
}

model CharacterCost {
  id           String   @id @default(cuid())
  name         String   @unique
  creatorName  String
  ownerContact String 
  canEditBy    String[]
  m0           Int
  m1           Int
  m2           Int
  m3           Int
  m4           Int
  m5           Int
  m6           Int
  noLimit      Boolean

  character Character @relation(fields: [name], references: [name], onDelete: Cascade)
}
