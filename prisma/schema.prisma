generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  discordId  String   @unique
  username   String
  globalName String?
  customName String?
  avatar     String?
  email      String?
  createdAt  DateTime @default(now())
}

model Character {
  id              String   @id
  code            String
  rank            Int
  type            Int
  element         Int
  camp            Int
  en              String
  ru              String
  portrait        String
  icon            String
  halfPortrait    String
  halfPortrait170 String
  iconHoyo        String
  createdAt       DateTime @default(now())
}

model Weapon {
  id          String  @id
  icon        String
  rank        Int
  type        Int
  en          String
  ru          String?
  iconUrl     String
  hoyoIconSrc String?
}
